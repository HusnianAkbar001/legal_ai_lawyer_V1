FLASK_ENV=development
SECRET_KEY=""
# DATABASE_URL=postgresql://legal_ai:legal_ai_pass@db:5432/legal_ai
SQLALCHEMY_DATABASE_URI="postgresql://postgres:superuser@localhost:5433/Your_DB_Name"
DATABASE_URL="postgresql://postgres:superuser@localhost:5433/Your_DB_Name"

JWT_ACCESS_MIN=15
JWT_REFRESH_DAYS=30

# Email (use real SMTP later; for now you can keep dummy)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
MAIL_USE_TLS=true
SMTP_USER=PUT_YOUR_EMAIL_HERE
SMTP_PASS=PUT_YOUR_GMAIL_APP_PASSWORD_HERE
EMAIL_FROM=PUT_YOUR_EMAIL_HERE
FRONTEND_VERIFY_URL=http://localhost:5000
FRONTEND_RESET_URL=http://localhost:5000

# Superadmin
SUPERADMIN_EMAIL="admin@gmail.com" # Admin Email
SUPERADMIN_PASSWORD="Admin@1234" # Admin Password
SUPPORT_INBOX_EMAIL="PUT_YOUR_EMAIL_HERE"
# Storage
STORAGE_BASE=storage/uploads
MAX_UPLOAD_MB=10
CHAT_MEMORY_LIMIT=10
RAG_DISTANCE_THRESHOLD=1.5
# RAG / LLM
EMBEDDING_PROVIDER=openai
EMBEDDING_DIMENSION=3072
EMBEDDING_MODEL_NAME=text-embedding-3-large
EMBEDDING_MODEL=text-embedding-3-large
CHAT_PROVIDER=openai
CHAT_MODEL=gpt-4o-mini
# CHAT_PROVIDER=groq
# CHAT_MODEL=openai/gpt-oss-120b
RAG_TOP_K=5

OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_BASE_URL="https://api.openai.com/v1"
# GROQ_API_KEY=your_groq_api_key_here
# GROQ_BASE_URL=https://api.groq.com/openai/v1

# Push (leave blank in dev)
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=
APNS_AUTH_KEY_PATH=

# celery/redis (dev via docker compose)
REDIS_URL="redis://localhost:6379/0" # Change This If You are Not Using Docker Desktop
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

